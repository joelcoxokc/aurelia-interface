.ai-card
    flex-container()
    position: relateive
    flex 1 0 auto
    padding: 0
    margin-bottom: 20px
    margin-top: 10px
    .card-content
        width 100%
        flex-container()
        flex : 1 0 auto
        box-shadow: 0px 2px 4px rgba(0,0,0,0.2)
        flex-direction column
    .card-heading
        width 100%
        background-color: white
        flex-container()
        padding: 10px
        margin: 0
        font-size: 30px
        font-weight: 100
        color: $grey.base

    .card-body
        padding: 16px 8px 8px 8px
        width 100%
        background-color: white
        flex-direction column
        flex : 1 0 auto
        flex-container()

    .card-footer
        width 100%
        background-color: white
        flex-container()
        position: relateive
        flex: 1 0 auto
        border-top 1px solid #dddddd
        .card-footer-text
            padding 10px
    .card-actions
        width: 100%
        background-color white
        position relateive
        flex: 1 0 auto
        border-top: 1px solid $grey.lighten-2
        display: flex

        ul
            list-style    : none
            display       : flex
            flex-direction: row

            li
                display: inline-block
                cursor: pointer

                a
                    padding: 16px 20px
                    display: block


