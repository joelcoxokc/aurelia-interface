
make-btn-transition(properties, props2)
    transition: properties, props2

ai-btn-transition-varients()
    for i in 1..12

        time = (i * 100) / 3
        delay = unit(time, 'ms')
        &.btn-position-{i}
            transition width 300ms cubic-bezier(0,.74,0,.99) delay, height 300ms cubic-bezier(0,.74,0,.99) delay, opacity 300ms cubic-bezier(0,.74,0,.99) delay
            inspect: delay



.ai-action-group
    flex-container()
    cursor: pointer
    .ai-btn
        margin-top: 0
        // transition: width 100ms ease-out, height 100ms ease-out


    .ai-action
        flex : 0 0 80px
        order: 1
        height: 80px
        width: 80px
        & > i
            transition all 200ms ease
            transform: rotate(-180deg)

    .ai-btn-group
        flex       : 1 0 auto
        align-items: center
        justify-content: center
        flex-container()

        .ai-btn
            width: 38px
            height: 38px
            opacity: 1
            ai-btn-transition-varients();


    &.action-group-left
        flex-direction: row
        .ai-action
            order: 1

        .ai-btn-group
            width      : (100% - 80px)
            order      : -1
            flex-direction : row
            justify-content: flex-end

    &.action-group-right
        flex-direction: row
        .ai-action
            order: -1

        .ai-btn-group
            width      : (100% - 80px)
            order      : 1
            flex-direction : row
            justify-content: flex-start
            .ai-btn
                margin-right: 0
                margin-left: 20px

    &.action-off
        .ai-btn-group
            .ai-btn
                width :0
                height:0
                opacity: 0
    &.action-on
        .ai-action
            & > i
                transform: rotate(0deg)





