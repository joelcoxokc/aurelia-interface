.ai-btn-group
    // flex-container()
    flex-direction: row

    width : auto
    position  : relative
    margin-bottom: 10px
    .ai-btn
        align-self: flex-start

    &.group-center
        justify-content: center
        align-items: center
        width : 100%

    &.no-space

        .btn, a.btn
            border-radius: 0
            box-shadow: 0px 2px 2px rgba(0,0,0,0.2)
            margin 0
