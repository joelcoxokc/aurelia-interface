create-reveal(side, direction, order, alignment, sizing)
    &.reveal-{side}
        flex            : 1 0 auto
        flex-direction  : direction
        justify-content : alignment
        .primary-action
            order: order
        .action-buttons
            order: -(order)
            flex-direction direction
            min-max-{sizing}($btn-size)


.ai-action-reveal
    flex-container()
    position: relative
    flex-direction: column
    align-items: center
    justify-content: center
    cursor: pointer

    .action-buttons
        flex-container()
        overflow        : hidden
        align-items     : center
        justify-content : center
        position        : relative
        flex-direction  : column
        text-align center
        .ai-btn
            margin 0 5px
            overflow: hidden
            width 0
            height 0
            transition height 400ms cubic-bezier(0,.9,.01,.99), width 400ms cubic-bezier(0,.9,.01,.99)
        for index in 1..12
            delay = (index * 100) / 2
            .ai-btn:nth-child({index})
                transition height 400ms cubic-bezier(0,.9,.01,.99) unit(delay, 'ms') , width 400ms cubic-bezier(0,.9,.01,.99) unit(delay, 'ms')



    create-reveal(left  , row   ,  1, flex-end  , height)
    create-reveal(right , row   , -1, flex-start, height)
    create-reveal(top   , column,  1, flex-end  , width )
    create-reveal(bottom, column, -1, flex-start, width )

    &:hover
        .action-buttons
            .ai-btn
                width  $btn-size-xs
                height $btn-size-xs

