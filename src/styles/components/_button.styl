.btn
    background-color: $blue.base

.btn-large
    background-color: $blue.base
a.ai-btn,
.ai-btn
    display: inline-block
    flex 1 0 auto
    height: auto
    // width: 100%
    flex-direction: row
    position:  relative
    align-content: flex-start
    justify-content: flex-start

    &.center
        // width: auto
        align-items: center
        justify-content: center

    &.is-row
        flex-direction: row !important
    &.is-column
        display: flex
        flex-direction: column !important


    button.btn, .btn, a, a.btn
        flex-container()
        padding        : 0 2rem
        margin         : 20px 0 20px 0
        outline        : none
        border         : none
        text-align     : center
        align-items    : center
        justify-content: center
        cursor         : pointer
        // align-self     : flex-start
        box-shadow     : $btn-box-shadow
        border-radius  : $btn-border-radius
        line-height    : $btn-line-height
        transition     : $btn-transition
        background     : $btn-themes-bg.default
        color          : $btn-themes-color.default
        &:hover
            box-shadow: $btn-hover-box-shadow
        &:active
            box-shadow: $btn-active-box-shadow

        if $btn-is-uppercase
            text-transform : uppercase

        &.btn-round
            border-radius: 100%
            height 64px
            width 64px


        &.btn-sm
            padding    : 0 1.6rem
            line-height: 24px
            &.btn-round
                padding    : 0
                height: 24px
                width: 24px
        &.btn-md
            line-height: 38px
            &.btn-round
                padding    : 0
                height: 38px
                width: 38px
        &.btn-lg
            padding    : 0 3rem
            line-height: 64px
            &.btn-round
                padding    : 0
                height     : 64px
                width      : 64px
        &.btn-xl
            padding    : 0 4rem
            line-height: 80px
            &.btn-round
                padding    : 0
                height     : 80px
                width      : 80px

        &.btn-flat
            box-shadow: 0



        .action-buttons
            .ai-btn
                width:  0 !important
                height: 0 !important

        .primary-action
            flex-container()
            flex           : 1 0 auto
            align-items    : center
            justify-content: center


        & > i.btn-icon
            &.icon-left
                margin-right: 10px
            &.icon-right
                margin-left: 10px

        ai-theme-varients(btn, $btn-themes-bg, $btn-themes-color)
