$aside-width-xs              = 150px
$aside-width-sm              = 200px
$aside-width-md              = 250px
$aside-width-lg              = 320px
$aside-width-xl              = 240px
$aside-width                 = 0px
$aside-fold-width            = 64px


create-aside-varient(size, onOpen, onClose, onFold)

  &.aside-{size}
    flex: 0 0 onClose
    min-max-width(onClose)

    &.aside-is-open
      flex: 0 0 onOpen
      min-max-width(onOpen)

    &.aside-is-folded
      flex: 0 0 onFold
      min-max-width(onFold)

.ai-aside

  flex             : 1
  z-index          : 1010
  // overflow         : hidden
  position         : relative
  flex-direction   : column
  background-color : white
  position relative
  top: 0
  overflow-x: hidden
  overflow-y: scroll
  transition : all 300ms cubic-bezier(0,.74,0,.99)

  min-max-height(100%)
  min-max-width(0)
  flex-container()

  &.aside-is-fixed
    position fixed
    top: 0

  &.aside-left
    left : 0
    order: -1
    box-shadow: $aside-box-shadow-left

  &.aside-right
    right : 0
    order : 2
    box-shadow: $aside-box-shadow-right


  &.aside-is-open
      flex: 0 0 $aside-width-sm
      min-max-width($aside-width-sm)

  &.aside-is-folded
    flex: 0 0 $aside-fold-width
    min-max-width($aside-fold-width)



  create-aside-varient(xs, $aside-width-xs, 0, $aside-fold-width)
  create-aside-varient(sm, $aside-width-sm, 0, $aside-fold-width)
  create-aside-varient(md, $aside-width-md, 0, $aside-fold-width)
  create-aside-varient(lg, $aside-width-lg, 0, $aside-fold-width)
  create-aside-varient(xl, $aside-width-xl, 0, $aside-fold-width)



.aside-header
	min-width: 100%
	flex: 1 0 $header-height-xl
	display: flex
	flex-direction: column
	max-height: $header-height-xl
	align-items: center
	justify-content: center
	font-weight: 500

.aside-content
	flex 1 0 auto
	display: flex
	flex-direction: column
	background: white


.ai-nav-list
  margin 0
  padding 0
  .list-header
    margin 0
    padding 0
    font-size: 1.2em
    line-height: 48px
    padding-left: 24px
    font-weight: bold
    color: $grey.lighten-1

  .list-item
    margin 0
    padding 0
    font-size: 1.2em
    line-height: 48px
    flex-container()

    i
      padding-left: 24px
    a
      flex 1 0 auto
      padding-left: 24px

      &.active,
      &:active,
      &:hover
        background-color: $grey.lighten-4







